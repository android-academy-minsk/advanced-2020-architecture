<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_h"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/img_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:src="@drawable/img_demo_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingLeft="@dimen/txt_padding_left"
            android:paddingTop="@dimen/common_padding_top"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/txt_size_big"
            android:textStyle="bold"
            tools:text="@string/txt_title_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_image"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/txt_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/txt_padding_left"
            android:paddingTop="@dimen/common_padding_top"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/txt_size_medium"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_image"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"
            tools:text="@string/txt_description_2" />
</androidx.constraintlayout.widget.ConstraintLayout>